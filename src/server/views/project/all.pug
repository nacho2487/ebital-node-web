extends ../layout

block content
	.row
		.col-sm-12.projects-header
			ul.services.all
				each service, i in services
					li(style="background-color:" + service.color)
						a(href="/" + getLocale() + __("url.projectsByService").replace(":serviceUrl", service.url[getLocale()]).replace("/:state?", ""))
							=service.title[getLocale()]

	.row     
		.col-sm-12
			+showProjects(projects, 300)